<script type="text/x-template" id="modal-template">
    <transition name="modal">
      <div class="modal-mask">
        <div class="modal-wrapper">
          <div class="modal-container">
  
            <div class="modal-header">
              <slot name="header">
                {{info.name}}
              </slot>
            </div>
  
            <div class="modal-body">
              <slot name="body">      
                  <div v-for="(item, index) in info.skill" class="modal-info d-flex flex-row w-100">
                      <img :src="'/assets/character/'+info.id+'/skill'+(index+1)+'/avatar.jpg'">
                      <div class="l--box w-100">
                            <p class="l--title">{{item.name}}</p>
                            <p class="l--desc">{{item.description}}</p>
                            <p class="l--info text-right">TARGET {{item.target.toUpperCase()}} | MANA  {{item.mana}} | COOLDOWN {{item.cooldown}}</p>
                      </div>                      
                  </div>
              </slot>
            </div>
  
            <div class="modal-footer">
              <slot name="footer">                
                <button class="modal-default-button btn-color4 w-100" @click="$emit('close')">
                  Close
                </button>
              </slot>
            </div>
          </div>
        </div>
      </div>
    </transition>
</script>

<script>
    // register modal component
    Vue.component('modal', {
        props: ['char'],
        data: function () {
            return {
                info: {}
            }
        },
        created: function () {
            console.log('created')
            console.log(this.char)
            let self = this;
            this.$http.get('/char/' + this.char).then(function (response) {
                if (response.status == "200") {
                    self.info = response.body[0]
                }
            })
        },
        template: '#modal-template',
    })
</script>