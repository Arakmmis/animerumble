                                    <img :src="'/assets/character/'+char.id+'/avatar.jpg'" v-if="!lineup.some(x => x === char.id)">
                                    <img :src="'/assets/theme/empty.jpg'" v-if="lineup.some(x => x === char.id)">
                                </button>
                            </div>
