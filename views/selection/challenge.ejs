<div class="challenge">
    <div class="l--body">
        <div class="d-flex flex-column align-items-center mb-2">
            <button @click="findMatch()" :disabled="lineup.length < 3" class="btn-color4 w-100">
                <i class="icon-spin animate-spin" v-if="matchMaking"></i> {{matchMaking ? 'Searching...' : 'Find a Match'}}
            </button>
            <p class="font-size-12 color-white" @click="cancelMatch" v-if="matchMaking">Cancel</p>
        </div>

        <div v-if="challenge.seen" class="challenge--accept">
            <p class="title-1">Challenge from {{challenge.challenger}}</p>
            <button @click="onAccept(challenge.challenger)" :disabled="lineup.length < 3" class="btn-color4 w-100">Accept?</button>
        </div>

        <div class="challenge--container mb-4 mt-1">
            <p class="l--title">ONLINE - {{players.filter(x => x[3]==='online').length}}</p>
            <div class="mb-3">
                <p v-if="item[3] === 'online'" v-for="item in players">
                    <span class="mr-1">{{item[1]}}</span>
                    <button @click="onChallenge(item[1], $event)" v-if="item[1] !== username" :disabled="lineup.length < 3" class="btn--small">
                        <i class="icon-swords" aria-hidden="true"></i>
                    </button>
                </p>
            </div>
            <p class="l--title">IN GAME - {{players.filter(x => x[3]==='ingame').length}}</p>
            <div class="mb-3">
                <p v-if="item[3] === 'ingame'" class="font-weight-light" v-for="item in players">
                    <span class="mr-1">{{item[1]}}</span>
                </p>
            </div>
            <p class="l--title">IDLE - {{players.filter(x => x[3]==='offline').length}}</p>
            <div class="mb-3">
                <p v-if="item[3] === 'offline'" class="font-weight-light" v-for="item in players">
                    <span class="mr-1">{{item[1]}}</span>
                </p>
            </div>
            <p>
                <a href="/logout">Logout</a>
            </p>
        </div>
        <iframe src="https://discordapp.com/widget?id=429538988341198858&theme=dark" width="100%" height="500" allowtransparency="true"
            frameborder="0"></iframe>
    </div>
</div>