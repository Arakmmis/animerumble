<div class="selection--description d-flex flex-column">
    <div class="d-flex flex-row">
        <div class="">
            <img :src="'/assets/character/'+charInfo.id+'/skill'+(charSkill+1)+'/avatar.jpg'" class="l--img">
        </div>
        <div class="d-flex flex-column pl-2 l--box">
            <div class=" d-flex flex-row justify-content-between ">
                <p class="l--title mb-0 ">{{charInfo.skill[charSkill].name}}</p>
                <p class="l--info mb-0 d-flex flex-row align-items-center ">
                    <span class="pr-1 ">ENERGY:</span>
                    <img src="/assets/energy/energy_0.gif " v-for="n in charInfo.skill[charSkill].energy.a" />
                    <img src="/assets/energy/energy_1.gif " v-for="n in charInfo.skill[charSkill].energy.i" />
                    <img src="/assets/energy/energy_2.gif " v-for="n in charInfo.skill[charSkill].energy.s" />
                    <img src="/assets/energy/energy_3.gif " v-for="n in charInfo.skill[charSkill].energy.w" />
                    <img src="/assets/energy/energy_random.gif " v-for="n in charInfo.skill[charSkill].energy.r" />
                    <span v-if="charInfo.skill[charSkill].energy.a + charInfo.skill[charSkill].energy.i + charInfo.skill[charSkill].energy.s + charInfo.skill[charSkill].energy.w + charInfo.skill[charSkill].energy.r === 0">No Cost</span>
                </p>
            </div>

            <p class="l--desc ">{{charInfo.skill[charSkill].description}}</p>
        </div>
    </div>

    <div class="d-flex flex-row justify-content-between mt-2">
        <p class="l--info mb-0 ">
            CLASSES: {{charInfo.skill[charSkill].classes.join(', ').toUpperCase()}}</p>
        <p class="l--info mb-0 ">
            COOLDOWN {{charInfo.skill[charSkill].cooldown}}</p>
    </div>
</div>