<head>
    <title>Anime Rumble</title>
    <script src="/js/vue.js"></script>
    <script src="/js/socket.io.js"></script>
    <link rel="stylesheet" href="/css/style.css" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/1da8aad990302731afea05d49285274a.css">
    <link type="text/css" rel="stylesheet" href="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.css" / <script src="/js/vue-resource@1.5.0.js">
    </script>
    <script src="//unpkg.com/babel-polyfill@latest/dist/polyfill.min.js"></script>
    <script src="//unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.js"></script>
</head>

<body>

    <div id="app">
        <div class="d-flex flex-column justify-content-center align-items-center h-100">
            <div class="img-100 width-500">
                <img src="/assets/animerumble.jpg" class="mb-2 img-fluid">
            </div>
            <div class="width-300">
                <div class="mb-4">
                    <b-tabs>
                        <b-tab title="Login" active>
                            <form action="/login" method="post" class="mt-2">
                                <input type="text" v-model="username" name="username" class="form-control mb-2" placeholder="Your Username"></input>
                                <input type="password" v-model="password" name="password" class="form-control mb-2" placeholder="Your Password"></input>
                                <button type="submit" class="btn--small w-100">Login</button>
                            </form>
                        </b-tab>
                        <b-tab title="Register">
                            <form action="/register" method="post" class="mt-2 ">
                                <input type="text" v-model="username" name="username" class="form-control mb-2" placeholder="Your Username"></input>
                                <input type="text" v-model="name" name="name" class="form-control mb-2" placeholder="Your Name"></input>
                                <input type="email" v-model="email" name="email" class="form-control mb-2" placeholder="Your Email"></input>
                                <input type="password" v-model="password" name="password" class="form-control mb-2" placeholder="Your Password"></input>
                                <button type="submit" class="btn--small w-100">Register</button>
                            </form>
                        </b-tab>
                    </b-tabs>                    
                </div>
                <div class="mt-1">
                    <p class="font-weight-light color5">Welcome to Anime Rumble [Alpha]. Registration is quick. There's no email validation.</p>
                </div>
            </div>
        </div>

    </div>

    <script>        
        let app = new Vue({
            el: '#app',
            data: {
                username: '',
                password: '',
                email: '',
                name: '',
                players: [],
            },
            methods: {
            }
        })
    </script>
</body>